@model NailStudioApp.Web.ViewModel.Appointment.AppointmentViewModel

<h2>Delete Appointment</h2>

<p>Are you sure you want to delete this appointment?</p>

<div>
    <h4>Appointment Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Service</dt>
        <dd class="col-sm-10">@Model.Services.FirstOrDefault(s => s.Value == Model.ServiceId.ToString())?.Text</dd>

        <dt class="col-sm-2">Staff Member</dt>
        <dd class="col-sm-10">@Model.StaffMembers.FirstOrDefault(sm => sm.Value == Model.StaffMemberId.ToString())?.Text</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.SelectedDate.ToString("dddd, MMM dd, yyyy")</dd>

        <dt class="col-sm-2">Time</dt>
        <dd class="col-sm-10">@Model.SelectedTime</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ServiceId" />
        <input type="hidden" asp-for="StaffMemberId" />
        <input type="hidden" asp-for="SelectedDate" />
        <input type="hidden" asp-for="SelectedTime" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Manage" class="btn btn-secondary">Cancel</a>
    </form>
</div>
