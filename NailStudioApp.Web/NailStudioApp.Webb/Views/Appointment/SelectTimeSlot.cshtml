@model NailStudioApp.Web.ViewModel.Appointment.CreateAppointmentViewModel

<h2>Select Time Slot</h2>

<form asp-action="SaveAppointment" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="AvailableTimes">Select Time</label>
        <select asp-for="SelectedTime" class="form-control" asp-items="Model.AvailableTimes"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save Appointment</button>
</form>
