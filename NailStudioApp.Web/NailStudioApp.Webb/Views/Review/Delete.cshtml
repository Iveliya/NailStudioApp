@model NailStudioApp.Web.ViewModel.Review.IndexReviewViewModel


<div class="container">
    <h2>Delete Review</h2>
    <p>Are you sure you want to delete this review?</p>

    <h4>Review Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Model.Content</dd>

        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@Model.Rating</dd>
@* 
        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.UserName</dd> *@

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToString("MM/dd/yyyy")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Manage" class="btn btn-secondary">Cancel</a>
    </form>
</div>
