@model NailStudioApp.Data.Models.Service

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Service</title>
</head>
<body>
    <h1>Create a New Service</h1>

    <form asp-action="Create" asp-controller="NailStudio" method="post">
        <div>
            <label for="Name">Service Name:</label>
            <input type="text" id="Name" name="Name" value="@Model?.Name" required />
        </div>
        <div>
            <label for="Description">Description:</label>
            <textarea id="Description" name="Description" required>@Model?.Description</textarea>
        </div>
        <div>
            <label for="Price">Price:</label>
            <input type="number" id="Price" name="Price" step="0.01" value="@Model?.Price" required />
        </div>
        <div>
            <label for="Duration">Duration (HH:mm):</label>
            <input type="text" id="Duration" name="Duration" placeholder="00:30" value="@Model?.Duration.ToString(@"hh\:mm")" required />
        </div>

        <button type="submit">Create Service</button>
        <a href="@Url.Action("Index", "NailStudio")">
            <button type="button">Cancel</button>
        </a>
    </form>
</body>
</html>
